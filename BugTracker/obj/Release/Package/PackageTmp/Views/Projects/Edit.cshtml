@model BugTracker.Models.Project

@{
    ViewBag.Title = "Edit";
}


<!-- Tools -->
<section id="tools">
    <ul class="breadcrumb" id="breadcrumb">
        <li class="title" id="pagetitle"><a href="@Url.Action("Index", (string)ViewBag.Controller)">@ViewBag.Controller</a></li>
        <li class="active"><a href="@Url.Action(ViewBag.Action, ViewBag.Controller)">Edit</a></li>
    </ul>
</section>

@using (Html.BeginForm())
{
    
    @Html.HiddenFor(model=>model.Id)
    
    <form>
        @Html.AntiForgeryToken()

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <!-- Content -->
        <div id='content'>
            <div class="col-md-12">
                <div class='panel panel-default'>
                    <div class='panel-heading'>
                        <i class='icon-edit icon-large'></i>
                        Project Name
                    </div>
                    <div class='panel-body'>
                        <fieldset>
                            <div class="form-group">
                                <div class="form-group col-md-6">
                                    @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label" })
                                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Project Name" } })
                                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="row"></div>
                            <div class="form-group" style="text-align:right">
                                <input type="submit" name="saveButton" value="Save Changes" class="btn btn-default" />
                            </div>
                        </fieldset>
                    </div>
                </div>
            </div>


            <div class="col-md-6" style="text-align:center">
                <div class='panel panel-default'>
                    <div class='panel-heading'>
                        <i class='icon-edit icon-large'></i>
                        Users In Project
                    </div>
                    <div class='panel-body'>
                        @*<form>*@
                        <fieldset>
                            <div class="form-group">
                                @Html.ListBoxFor(m => Model.selectedSubscribedUsersId, Model.subscribedUsers as MultiSelectList, new { style = "height:200px; width:350px" })
                            </div>
                            <div class="row"></div>
                            <div class="form-group">
                                <input type="submit" name="removeButton" value="remove" class="btn btn-default" />
                            </div>
                        </fieldset>
                        @*</form>*@
                    </div>
                </div>
            </div>

            <div class="col-md-6" style="text-align:center">
                <div class='panel panel-default'>
                    <div class='panel-heading'>
                        <i class='icon-edit icon-large'></i>
                        User Not In Project
                    </div>
                    <div class='panel-body'>
                        @*<form>*@
                        <fieldset>
                            <div class="form-group">
                                @Html.ListBoxFor(m => Model.selecteNoneSubscribedUsers, Model.noneSubscribedUsers as MultiSelectList, new { style = "height:200px; width:350px" })
                            </div>
                            <div class="row"></div>
                            <div class="form-group">
                                <input type="submit" name="addButton" value="add" class="btn btn-default" />
                            </div>
                        </fieldset>
                        @*</form>*@
                    </div>
                </div>
            </div>
        </div>

    </form>

}

